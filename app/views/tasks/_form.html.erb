<div class="container">
  <%= form_with model: task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :details %>
    <%= f.text_area :details, class: "form-control" %>
    <% if task.id %>
      <%= f.check_box :completed %>
      <%= f.label :completed %>
    <% end %>
    <%= f.submit class: "btn btn-primary mt-1 w-100" %>
  <% end %>
  <%= link_to "back", tasks_path, class: "btn btn-secondary mt-1 w-100"  %>
</div>
